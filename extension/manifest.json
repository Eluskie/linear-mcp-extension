{
  "manifest_version": 3,
  "name": "Linear Assistant",
  "version": "1.0.0",
  "description": "Chat with Linear using natural language - create issues, search tasks, and manage your workflow seamlessly",
  
  "permissions": [
    "storage",
    "activeTab",
    "identity"
  ],
  
  "host_permissions": [
    "https://api.linear.app/*",
    "https://*.clerk.accounts.dev/*",
    "https://*.clerk.com/*",
    "https://*.convex.cloud/*",
    "http://localhost:3001/*"
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Linear Assistant"
  },
  
  "background": {
    "service_worker": "background/service-worker.js"
  },
  
  
  
  "web_accessible_resources": [
    {
      "resources": ["popup/*", "shared/*"],
      "matches": ["<all_urls>"]
    }
  ]
}