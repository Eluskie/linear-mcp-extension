{
  "designSpecification": {
    "branding": {
      "name": "Midday",
      "logo": {
        "type": "geometric_sunburst",
        "style": "minimalist_radial_lines",
        "color": "white_on_dark"
      },
      "tagline": "curated by Mobbin"
    },
    "colorPalette": {
      "primary": {
        "background": "#0a0a0a",
        "surface": "#1a1a1a",
        "card": "#2a2a2a"
      },
      "text": {
        "primary": "#ffffff",
        "secondary": "#a0a0a0",
        "muted": "#666666"
      },
      "accent": {
        "primary": "#4ade80",
        "secondary": "#22c55e",
        "warning": "#f59e0b",
        "info": "#3b82f6"
      },
      "ui": {
        "border": "#333333",
        "hover": "#404040",
        "input_bg": "#1f1f1f"
      }
    },
    "layout": {
      "structure": "three_panel",
      "panels": {
        "left_sidebar": {
          "width": "280px",
          "background": "#0a0a0a",
          "navigation": {
            "items": [
              {"icon": "chart", "label": "Analytics"},
              {"icon": "grid", "label": "Dashboard"},
              {"icon": "document", "label": "Documents"},
              {"icon": "history", "label": "History"},
              {"icon": "users", "label": "Team"},
              {"icon": "box", "label": "Storage"},
              {"icon": "settings", "label": "Settings"}
            ]
          }
        },
        "main_content": {
          "background": "#1a1a1a",
          "chat_interface": {
            "greeting": {
              "avatar": "geometric_sunburst_icon",
              "message": "Hi {name}, how can I help you today?",
              "style": "centered"
            },
            "quick_actions": {
              "style": "pill_buttons",
              "background": "#2a2a2a",
              "text_color": "#a0a0a0",
              "hover_color": "#404040",
              "examples": [
                "What's my burn rate",
                "What's my runway", 
                "Show transactions without receipts",
                "What's my tax summary"
              ]
            },
            "input_area": {
              "placeholder": "Ask Midday a question...",
              "background": "#1f1f1f",
              "border": "#333333",
              "button_icon": "send_arrow",
              "voice_icon": "microphone"
            }
          }
        },
        "right_panel": {
          "width": "300px",
          "background": "#1a1a1a",
          "content": {
            "charts": {
              "type": "bar_chart",
              "title": "vs $7,669 last period",
              "data_visualization": "monthly_comparison",
              "colors": ["#4ade80", "#22c55e"]
            },
            "metrics": {
              "sections": [
                "Current Period",
                "Last Period", 
                "Monthly trends"
              ]
            }
          }
        }
      }
    },
    "typography": {
      "font_family": "Inter, system-ui, sans-serif",
      "sizes": {
        "heading_primary": "24px",
        "heading_secondary": "18px", 
        "body": "14px",
        "caption": "12px"
      },
      "weights": {
        "light": 300,
        "regular": 400,
        "medium": 500,
        "semibold": 600
      }
    },
    "components": {
      "buttons": {
        "primary": {
          "background": "#4ade80",
          "text": "#000000",
          "border_radius": "8px",
          "padding": "12px 24px"
        },
        "secondary": {
          "background": "#2a2a2a",
          "text": "#a0a0a0", 
          "border": "#333333",
          "border_radius": "20px",
          "padding": "8px 16px"
        }
      },
      "cards": {
        "background": "#2a2a2a",
        "border": "#333333",
        "border_radius": "12px",
        "shadow": "0 4px 12px rgba(0,0,0,0.3)"
      },
      "inputs": {
        "background": "#1f1f1f",
        "border": "#333333",
        "border_radius": "8px",
        "padding": "12px 16px",
        "focus_border": "#4ade80"
      },
      "avatar": {
        "type": "geometric_icon",
        "size": "40px",
        "background": "#2a2a2a"
      }
    },
    "animations": {
      "transitions": "ease-in-out 0.2s",
      "hover_effects": "subtle_scale_and_glow",
      "loading_states": "skeleton_shimmer"
    },
    "spacing": {
      "unit": "4px",
      "padding": {
        "xs": "4px", 
        "sm": "8px",
        "md": "16px",
        "lg": "24px",
        "xl": "32px"
      },
      "margins": {
        "xs": "4px",
        "sm": "8px", 
        "md": "16px",
        "lg": "24px",
        "xl": "32px"
      }
    }
  }
}